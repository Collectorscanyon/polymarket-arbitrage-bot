# =========================
# SAFE DEFAULTS (recommended)
# =========================

# Hard kill switch: must be true for LIVE orders
TRADING_ENABLED=false

# Bankr dry-run (only relevant if any codepath still uses Bankr)
BANKR_DRY_RUN=true

# Enable direct Polymarket CLOB execution (fast path)
CLOB_EXECUTION_ENABLED=true
BTC15_EXECUTION_BACKEND=clob
BTC15_ALLOW_BANKR_FALLBACK=false

# =========================
# WALLET + SIGNING
# =========================

# Hot wallet private key (NEVER commit real keys)
POLYMARKET_PRIVATE_KEY=0xYOUR_PRIVATE_KEY

# Signature type:
# 0 = EOA wallet (default)
# 1 = email/Magic proxy
# 2 = browser proxy / safe
POLYMARKET_SIGNATURE_TYPE=0

# Optional (proxy/funder mode): usually NOT needed for EOA signing.
# Only set if you explicitly use a proxy flow / signature_type != 0.
# POLYMARKET_FUNDER_ADDRESS=0xYOUR_WALLET_ADDRESS

# =========================
# BTC15 SAFETY CAPS
# =========================

# Caps are best-effort and based on estimated USDC.
BTC15_MAX_ESTIMATED_USDC_PER_BRACKET=10
BTC15_DAILY_ESTIMATED_USDC_CAP=50
BTC15_MAX_OPEN_BRACKETS=1

# Avoid trading too close to expiry (handled by tradeable window in cache)
# BTC15 cache already excludes the last ~90 seconds by default.

# =========================
# OPTIONAL: WS SNAPSHOT SPEEDUP
# =========================

# Use CLOB Market WebSocket snapshots for books (REST fallback)
BTC15_WSS_ENABLED=true

# =========================
# OPTIONAL: Sidecar URL
# =========================

# Needed if you still use Bankr prompts or telemetry endpoints
# SIDECAR_URL=http://localhost:4000
