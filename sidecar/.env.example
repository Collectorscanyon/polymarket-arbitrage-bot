# ═══════════════════════════════════════════════════════════════════════════════
# BANKR SIDECAR CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════════

# Payment wallet private key for x402 USDC fees on Base
BANKR_PAYMENT_PRIVATE_KEY=0x_your_payment_wallet_private_key_here

# Context wallet that Bankr should act on (can match payment wallet)
BANKR_CONTEXT_WALLET=0xYourContextWalletAddress

# Bankr API key (get from https://bankr.bot)
BANKR_API_KEY=

# ═══════════════════════════════════════════════════════════════════════════════
# GUARDRAILS - Polymarket Mode
# ═══════════════════════════════════════════════════════════════════════════════

# Set to true to prevent any real trades
BANKR_DRY_RUN=true

# Maximum USDC spend per single prompt/trade
BANKR_MAX_USDC_PER_PROMPT=7

# Maximum daily USDC spend across all prompts
BANKR_DAILY_SPEND_CAP=32

# ═══════════════════════════════════════════════════════════════════════════════
# PERPS TRADING - Avantis (Base chain)
# "Bankr = Brain + Hands" mode
# ═══════════════════════════════════════════════════════════════════════════════

# Enable perps trading features
PERPS_ENABLED=true

# Maximum leverage allowed (Bankr will not exceed this)
PERPS_MAX_LEVERAGE=5

# Maximum USDC per single perp trade
PERPS_MAX_USDC_PER_TRADE=350

# Daily loss cap for perps (stop trading if daily losses exceed this)
PERPS_DAILY_LOSS_CAP=200

# Maximum risk per trade as % of equity
PERPS_MAX_RISK_PCT=1.0

# Assets to scan for opportunities (comma-separated)
PERPS_TRACKED_ASSETS=ETH,DEGEN,BNKR

# Dry run for perps (set to false to execute real trades)
PERPS_DRY_RUN=true

# ═══════════════════════════════════════════════════════════════════════════════
# PRICE SENTINEL - "Local Scout → Bankr Sniper"
# Watches prices locally, only pings Bankr at daily extremes
# ═══════════════════════════════════════════════════════════════════════════════

# How often to check prices (seconds)
SENTINEL_LOOP_INTERVAL=15

# Dry run for sentinel (set to false for live execution)
SENTINEL_DRY_RUN=true

# Global daily loss cap (stops all sentinel trading if exceeded)
SENTINEL_GLOBAL_DAILY_LOSS_CAP=500

# Price feed source: binance (fast) or coingecko (free, rate limited)
PRICE_FEED_SOURCE=binance

# Per-asset overrides (optional)
# SENTINEL_BTC_PERP_ENABLED=true
# SENTINEL_BTC_PERP_TOP_ZONE=0.96
# SENTINEL_BTC_PERP_BOTTOM_ZONE=0.04
# SENTINEL_BTC_PERP_COOLDOWN_MINUTES=60
# SENTINEL_BTC_PERP_MAX_USDC=300
# SENTINEL_BTC_PERP_MAX_LEVERAGE=4

# SENTINEL_ETH_PERP_ENABLED=true
# SENTINEL_ETH_PERP_TOP_ZONE=0.95
# SENTINEL_ETH_PERP_BOTTOM_ZONE=0.05
# SENTINEL_ETH_PERP_COOLDOWN_MINUTES=45

# ═══════════════════════════════════════════════════════════════════════════════
# EXIT MANAGER SETTINGS
# ═══════════════════════════════════════════════════════════════════════════════

# Take profit threshold (% gain)
TAKE_PROFIT_PCT=2.2

# Stop loss threshold (% loss, negative)
STOP_LOSS_PCT=-0.95

# Maximum hold time in hours
MAX_HOLD_HOURS=16

# Hour (UTC) to auto-flatten all positions
AUTO_FLATTEN_HOUR_UTC=23

# How often to check positions (seconds)
EXIT_LOOP_SLEEP_SECONDS=45

# Exit manager dry run
EXIT_MANAGER_DRY_RUN=true

# ═══════════════════════════════════════════════════════════════════════════════
# SERVER SETTINGS
# ═══════════════════════════════════════════════════════════════════════════════

PORT=4000
PYTHON_CMD=python
