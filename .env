# ─────────────────────────────────────────────────────────────
# Bot Rate Limiting & Quality Filters
# ─────────────────────────────────────────────────────────────

# Minimum price gap (bypasses interactive prompt)
MINIMUM_PRICE_GAP=3

# Loop pacing (seconds between iterations)
LOOP_SLEEP_SECONDS=9

# Global Bankr limits
BANKR_MAX_COMMANDS_PER_HOUR=10
BANKR_MIN_SECONDS_BETWEEN_PROMPTS=15

# Per-market cooldown (seconds before re-asking Bankr about same market)
MARKET_COOLDOWN_SECONDS=480

# Quality filters (38 bps = 0.38% minimum edge)
MIN_EDGE_BPS=38
MAX_OPS_PER_LOOP=1
MAX_BANKR_COMMANDS_PER_LOOP=1

# ─────────────────────────────────────────────────────────────
# Trading thresholds
# ─────────────────────────────────────────────────────────────

# Combined YES+NO price threshold for arb (e.g. 0.99 = 1% theoretical edge)
ARB_THRESHOLD=0.99

# Price below which we consider a cheap-buy hedge opportunity
CHEAP_BUY_THRESHOLD=0.35

# Scan interval when no opportunities found (seconds)
SCAN_INTERVAL=30

# ─────────────────────────────────────────────────────────────
# Bankr executor settings
# ─────────────────────────────────────────────────────────────

# Sidecar URL
BANKR_EXECUTOR_URL=http://localhost:4000

# Enable/disable executor (false = DRY mode, just log what we'd do)
ENABLE_BANKR_EXECUTOR=true

# Dry run mode (adds [DRY RUN] to prompts so Bankr doesn't execute)
BANKR_DRY_RUN=true

# ─────────────────────────────────────────────────────────────
# Stake sizes (must be <= sidecar's BANKR_MAX_USDC_PER_PROMPT)
# ─────────────────────────────────────────────────────────────

# USDC per side for arb trades (total = 2x this for YES+NO)
ARB_STAKE_USDC=2

# USDC for hedge/cheap-buy trades
HEDGE_STAKE_USDC=2

# ─────────────────────────────────────────────────────────────
# BTC 15-minute Up/Down Loop Strategy
# ─────────────────────────────────────────────────────────────

# Enable/disable the BTC 15m loop strategy
BTC15_ENABLED=true

# Market filter (substring match in slug/label)
# Also matches: "bitcoin up or down", "btc up or down", "15-min", "15 min" in question
BTC15_MARKET_SUBSTR=btc-up-or-down-15m

# Minimum market volume to consider (lowered for BTC 15m which can have lower vol)
BTC15_MIN_VOLUME_USDC=100

# Entry triggers
BTC15_CHEAP_SIDE_TRIGGER_MAX=0.35
BTC15_TARGET_AVG_MAX=0.30
BTC15_MAX_BRACKET_USDC=10

# Hedge/exit conditions
BTC15_MIN_TOTAL_EDGE_CENTS=1
BTC15_MAX_TIME_TO_HEDGE_SEC=600
BTC15_MIN_ORDERBOOK_LIQ_USDC=50

# Risk management
BTC15_MAX_OPEN_BRACKETS=3
BTC15_COOLDOWN_SEC=300
BTC15_DAILY_MAX_LOSS=20
BTC15_MAX_LOSSES_BEFORE_PAUSE=3

# Dev-only: force match on specific slug for testing (leave empty for normal auto-detection)
# For btc-updown-15m markets, leave empty - they are auto-detected by slug pattern
# Set to a specific slug only to test with non-15m markets
BTC15_FORCE_TEST_SLUG=
